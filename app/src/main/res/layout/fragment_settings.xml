<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragments.SettingsFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="User"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView4" android:textSize="24sp"
                    android:textStyle="bold" android:textColor="#000000"/>
            <Button
                    android:text="Login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/settings_openLoginButton"/>
        </LinearLayout>
        <TextView
                android:text="@string/title_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView5" android:textSize="24sp"
                android:textStyle="bold" android:textColor="#000000"/>
        <Button
                android:text="Downloads"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/button"/>
        <Button
                android:text="Forward: _ seconds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/button2"/>
        <Button
                android:text="Backward: _ seconds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/button4"/>
        <Button
                android:text="Preferred Mode: Stream"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/button5"/>
        <Button
                android:text="Sorting?"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/button6"/>
    </LinearLayout>

</FrameLayout>