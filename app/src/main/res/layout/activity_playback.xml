<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PlaybackActivity">

    <Button
            android:text="-10s"
            android:layout_width="80dp"
            android:layout_height="46dp"
            android:id="@+id/button2"
            android:onClick="seekBackward"
            tools:layout_editor_absoluteX="113dp"
            app:layout_constraintBottom_toBottomOf="@+id/button4"/>
    <Button
            android:text="+10s"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            android:onClick="seekForward"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/button2" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.073"
            android:layout_marginTop="56dp" app:layout_constraintTop_toBottomOf="@+id/playPauseButton"/>
    <Button
            android:text="▶    /    ❙❙"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/playPauseButton" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.498" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/subtitleText" android:onClick="playPause"
            style="@style/Widget.AppCompat.Button.Colored" android:textSize="15sp"/>
    <TextView
            android:text="Episode"
            android:layout_width="280dp"
            android:layout_height="31dp"
            android:id="@+id/titleText" android:textAlignment="center"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/coverImageView"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:textStyle="bold"
            android:textSize="20sp" android:textColor="@color/colorBlack"/>
    <TextView
            android:text="Podcast"
            android:layout_width="283dp"
            android:layout_height="22dp"
            android:id="@+id/subtitleText" android:textAlignment="center"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/titleText"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.497"/>
    <ImageView
            android:layout_width="280dp"
            app:srcCompat="@color/colorBlack"
            android:id="@+id/coverImageView" android:layout_height="280dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>