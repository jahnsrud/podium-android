<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PlaybackActivity">

    <Button
            android:text="- 10"
            android:layout_width="80dp"
            android:layout_height="46dp"
            android:id="@+id/seekBackButton"
            android:onClick="seekBackward"
            tools:layout_editor_absoluteX="113dp"
            app:layout_constraintBottom_toBottomOf="@+id/seekForwardButton"/>
    <Button
            android:text="+ 10"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/seekForwardButton"
            android:onClick="seekForward"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/seekBackButton" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.122"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="▶    /    ❙❙"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/playPauseButton" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.498" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/subtitleText" android:onClick="playPause"
            style="@style/Widget.AppCompat.Button.Colored" android:textSize="15sp"/>
    <TextView
            android:text="Episode"
            android:layout_width="280dp"
            android:layout_height="31dp"
            android:id="@+id/titleText" android:textAlignment="center"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/coverImageView"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:textStyle="bold"
            android:textSize="20sp" android:textColor="@color/colorBlack"/>
    <TextView
            android:text="Podcast"
            android:layout_width="283dp"
            android:layout_height="22dp"
            android:id="@+id/subtitleText" android:textAlignment="center"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/titleText"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.497"/>
    <ImageView
            android:layout_width="280dp"
            app:srcCompat="@color/colorBlack"
            android:id="@+id/coverImageView" android:layout_height="280dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="16dp" app:layout_constraintHorizontal_bias="0.495"/>
    <SeekBar
            android:layout_width="260dp"
            android:layout_height="25dp"
            android:id="@+id/seekBar" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/playPauseButton" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="0:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timePlayedText" app:layout_constraintEnd_toStartOf="@+id/seekBar"
            android:layout_marginEnd="11dp" app:layout_constraintTop_toTopOf="@+id/seekBar"/>
    <TextView
            android:text="0:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/totalTimeText"
            app:layout_constraintStart_toEndOf="@+id/seekBar"
            android:layout_marginStart="8dp" app:layout_constraintTop_toTopOf="@+id/seekBar"/>
</android.support.constraint.ConstraintLayout>