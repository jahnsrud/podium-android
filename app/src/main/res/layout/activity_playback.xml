<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PlaybackActivity">
    <ImageView
            android:layout_width="250dp"
            android:id="@+id/coverImageView" android:layout_height="250dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:scaleType="centerInside" app:srcCompat="@drawable/placeholder_cover"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/coverImageView" android:gravity="center"
            android:id="@+id/linearLayout2">
        <TextView
                android:text="Episode"
                android:layout_width="300dp"
                android:layout_height="31dp"
                android:id="@+id/titleText" android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="20sp" android:textColor="@color/colorBlack"
                android:layout_marginTop="12dp"/>
        <TextView
                android:text="Podcast"
                android:layout_width="300dp"
                android:layout_height="22dp"
                android:id="@+id/subtitleText" android:textAlignment="center"
                android:textStyle="bold"/>
    </LinearLayout>
    <Button
            android:text="- 10"
            android:layout_width="80dp"
            android:layout_height="46dp"
            android:id="@+id/seekBackButton"
            android:onClick="seekBackward"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@+id/playPauseButton"
            android:gravity="center">
        <TextView
                android:text="0:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/timePlayedText"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="4dp"/>
        <SeekBar
                android:layout_width="260dp"
                android:layout_height="25dp"
                android:id="@+id/seekBar"
        />
        <TextView
                android:text="0:00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/totalTimeText"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"/>
    </LinearLayout>
    <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/playPauseButton"
            android:onClick="playPause"
            style="@style/Widget.AppCompat.Button.Colored" android:textSize="15sp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:textColor="#FFFFFF"/>
    <Button
            android:text="+ 10"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/seekForwardButton"
            android:onClick="seekForward"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/seekBackButton"
            android:layout_marginStart="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>