<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PlaybackActivity">
    <TextView
            android:text="Episode"
            android:layout_width="280dp"
            android:layout_height="31dp"
            android:id="@+id/titleText" android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20sp" android:textColor="@color/colorBlack"
            tools:layout_editor_absoluteX="65dp" app:layout_constraintTop_toBottomOf="@+id/coverImageView"
            android:layout_marginTop="12dp"/>
    <Button
            android:text="- 10"
            android:layout_width="80dp"
            android:layout_height="46dp"
            android:id="@+id/seekBackButton"
            android:onClick="seekBackward"
            tools:layout_editor_absoluteX="113dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <SeekBar
            android:layout_width="260dp"
            android:layout_height="25dp"
            android:id="@+id/seekBar"
            tools:layout_editor_absoluteX="75dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/playPauseButton"/>
    <TextView
            android:text="0:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timePlayedText"
            app:layout_constraintEnd_toStartOf="@+id/seekBar"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/seekBar" android:layout_marginTop="4dp"/>
    <Button
            android:text="▶    /    ❙❙"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/playPauseButton"
            android:onClick="playPause"
            style="@style/Widget.AppCompat.Button.Colored" android:textSize="15sp"
            tools:layout_editor_absoluteX="160dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/subtitleText"/>
    <ImageView
            android:layout_width="280dp"
            app:srcCompat="@color/colorBlack"
            android:id="@+id/coverImageView" android:layout_height="280dp"
            tools:layout_editor_absoluteX="65dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="Podcast"
            android:layout_width="283dp"
            android:layout_height="22dp"
            android:id="@+id/subtitleText" android:textAlignment="center"
            tools:layout_editor_absoluteX="64dp" app:layout_constraintTop_toBottomOf="@+id/titleText"/>
    <Button
            android:text="+ 10"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/seekForwardButton"
            android:onClick="seekForward"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/seekBackButton"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="0:00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/totalTimeText"
            app:layout_constraintStart_toEndOf="@+id/seekBar"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/seekBar" android:layout_marginTop="4dp"/>
</android.support.constraint.ConstraintLayout>