<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="160dp" android:orientation="vertical" android:layout_marginBottom="10dp">

    <TextView
            android:id="@+id/list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingLeft="16dp"
            android:text="Podcast"
            android:textStyle="bold" android:textSize="16sp" android:textColor="@color/colorBlack"
            android:layout_marginTop="8dp"/>

    <TextView
            android:id="@+id/list_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingLeft="16dp"
            android:text="Description"/>
    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp" tools:srcCompat="@mipmap/ic_launcher_round"
            android:id="@+id/imageView" android:layout_marginLeft="16dp" android:layout_marginTop="8dp"/>

</LinearLayout>