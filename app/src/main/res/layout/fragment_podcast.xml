<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragments.PodcastFragment">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:gravity="center" android:background="#F3F3F3"
        >
            <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp" tools:srcCompat="@tools:sample/avatars"
                    android:id="@+id/coverImageView"
                    app:layout_constraintHorizontal_bias="0.02"/>
            <TextView
                    android:text="Podcast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/titleTextView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.498" android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/coverImageView" android:textSize="20sp"
                    android:textStyle="bold" android:textColor="#000000" android:textAlignment="center"
                    android:layout_marginBottom="16dp"/>
            <Button
                    android:text="+ Subscribe"
                    android:layout_width="112dp"
                    android:layout_height="40dp"
                    android:id="@+id/actionButton" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/titleTextView"
                    android:background="@drawable/rounded_background_colored" android:paddingStart="8dp"
                    android:paddingEnd="8dp"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteY="0dp"
                tools:layout_editor_absoluteX="0dp" android:id="@+id/list_recycler_view"/>
    </LinearLayout>
</FrameLayout>