<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SearchActivity">

    <android.support.v7.widget.RecyclerView
            android:layout_width="395dp"
            android:layout_height="209dp" tools:layout_editor_absoluteX="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <SearchView
            android:layout_width="395dp"
            android:layout_height="45dp" tools:layout_editor_absoluteX="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:queryHint='"Search"'/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="70dp"
            tools:layout_editor_absoluteX="8dp" android:id="@+id/textView"/>
</android.support.constraint.ConstraintLayout>