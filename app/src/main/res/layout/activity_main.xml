<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="Add Podcast [DIRECT]"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button5" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:onClick="testAddPod" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/button"/>
    <TextView
            android:layout_width="199dp"
            android:layout_height="40dp"
            android:text="Podcasts"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.05"
            android:textSize="30sp" android:textStyle="bold" android:textColor="@color/colorBlack"
            android:id="@+id/textView3" android:textAlignment="center" android:fontFamily="sans-serif-black"/>
    <Button
            android:text="Playback"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:onClick="openPlaybackActivity" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <fragment
            android:layout_width="393dp"
            android:layout_height="412dp" android:name="no.jahnsrud.podium.PodcastListFragment"
            android:id="@+id/fragment"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="44dp"/>
    <Button
            android:text="Open Podcast"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button6" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/button5" android:onClick="openPodcast"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"/>

</android.support.constraint.ConstraintLayout>