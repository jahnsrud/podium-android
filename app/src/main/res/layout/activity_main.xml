<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp" android:id="@+id/libraryTabContainer"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="596dp" app:layout_constraintBottom_toTopOf="@+id/playbackBar">

        <fragment
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:name="androidx.navigation.fragment.NavHostFragment"
                android:id="@+id/libraryTab"/>
    </FrameLayout>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp" android:id="@+id/searchTabContainer" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="596dp" app:layout_constraintBottom_toTopOf="@+id/playbackBar">

        <fragment
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:name="androidx.navigation.fragment.NavHostFragment"
                android:id="@+id/searchTab"/>
    </FrameLayout>
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp" android:id="@+id/settingsTabContainer" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="596dp" app:layout_constraintBottom_toTopOf="@+id/playbackBar">

        <fragment
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:name="androidx.navigation.fragment.NavHostFragment"
                android:id="@+id/settingsTab"/>
    </FrameLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="60dp" app:layout_constraintBottom_toTopOf="@+id/tabBar"
            android:background="#EEEEEE" android:onClick="openPlayback" android:padding="10dp"
            android:id="@+id/playbackBar">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:layout_marginBottom="8dp"
                android:id="@+id/linearLayout"
                android:background="#00A8A8A8" android:gravity="center_horizontal|center_vertical"
        >
            <TextView
                    android:text="Episode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView" android:textStyle="bold"/>
            <TextView
                    android:text="Podcast"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView2"/>
        </LinearLayout>
        <Button
                android:text="PlayPause"
                android:layout_width="40dp"
                android:layout_height="wrap_content" android:id="@+id/button2"/>
    </LinearLayout>
    <android.support.design.widget.BottomNavigationView
            android:id="@+id/tabBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="?android:attr/windowBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/bottom_nav_menu" app:itemTextColor="#43000000" app:labelVisibilityMode="unlabeled"/>

</android.support.constraint.ConstraintLayout>